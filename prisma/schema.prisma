generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String       @id @default(cuid())
  wallet_address String       @unique
  fullname       String
  username       String       @unique
  bio            String?
  avatarUrl      String?
  avatar         Avatar[]
  social         Social[]
  extraLinks     ExtraLinks[]
}

model Avatar {
  id        String @id @default(cuid())
  avatarUrl String
  user      User   @relation(fields: [userId], references: [id])
  userId    String
}

model Social {
  id       String  @id @default(cuid())
  name     String?
  username String
  url      String
  user     User    @relation(fields: [userId], references: [id])
  userId   String
}

model ExtraLinks {
  id          String @id @default(cuid())
  url         String
  title       String
  description String
  user        User   @relation(fields: [userId], references: [id])
  userId      String
}
